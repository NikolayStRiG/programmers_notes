<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="528.0" prefWidth="753.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.sterzhen.programmers_notes.fx_ui.controllers.SaveInfoResourceController">

    <BorderPane prefHeight="535.0" prefWidth="753.0">
        <left>
            <VBox prefHeight="200.0" prefWidth="190.0" BorderPane.alignment="CENTER">
                <Label text="Введите данные"/>
                <Label prefHeight="17.0" prefWidth="57.0" text="Name"/>
                <TextField fx:id="infoResourceName" prefHeight="32.0" prefWidth="527.0"/>
                <Label text="Address"/>
                <TextField fx:id="infoResourceAddress" prefHeight="32.0" prefWidth="509.0"/>
                <Label text="Description"/>
                <TextArea fx:id="infoResourceDescription" prefHeight="32.0" prefWidth="527.0"/>
                <Button onAction="#save" text="Сохранить"/>
            </VBox>
        </left>
        <center>
            <VBox>
                <Label text="Введите данные"/>
                <Label prefHeight="17.0" prefWidth="57.0" text="Id"/>
                <TextField fx:id="infoResourceIdUpdate" disable="true" prefHeight="32.0" prefWidth="527.0"/>
                <Label prefHeight="17.0" prefWidth="57.0" text="Name"/>
                <TextField fx:id="infoResourceNameUpdate" prefHeight="32.0" prefWidth="527.0"/>
                <Label text="Address"/>
                <TextField fx:id="infoResourceAddressUpdate" prefHeight="32.0" prefWidth="509.0"/>
                <Label text="Description"/>
                <TextArea fx:id="infoResourceDescriptionUpdate" prefHeight="32.0" prefWidth="527.0"/>
                <HBox>
                    <Button onAction="#update" text="Изменить"/>
                    <Button onAction="#delete" text="Удалить"/>
                </HBox>
            </VBox>
        </center>
        <right>
            <VBox>
                <ListView fx:id="infoResourceList" onMouseClicked="#clickToInfoResourceList" prefHeight="200.0"
                          prefWidth="200.0"/>
                <Button onAction="#refresh" text="Обновить"/>
            </VBox>
        </right>
        <bottom>
            <Label fx:id="errorLog" text="error log" BorderPane.alignment="CENTER_LEFT"/>
        </bottom>
    </BorderPane>

</VBox>
